---
import BasicLayout from '../layouts/BasicLayout.astro';
import projects from '../content/data/projects.json';
---

<BasicLayout title="Projets">
  <h1 class="text-5xl text-green-950">Mes Projets</h1>
  <ul class="space-y-8">
    {projects.map(project => (
      <li class="list-none p-5 border border-gray-300 rounded-lg shadow-md">
        <h2 class="mt-0 text-xl font-bold">{project.title}</h2>
        <p>{project.description}</p>
        <img src={project.image} alt={`Image du ${project.title}`} class="w-full h-auto max-w-xs rounded-lg" />
        <a href={project.link} class="inline-block mt-2 px-4 py-2 bg-blue-500 text-white no-underline rounded">En savoir plus</a>
      </li>
    ))}
  </ul>
</BasicLayout>